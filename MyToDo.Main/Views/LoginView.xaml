<UserControl
    x:Class="MyToDo.Main.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyToDo.Main.Views"
    xmlns:mt="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:extendProperty="clr-namespace:MyToDo.Main.Core.Extensions"
    Width="715"
    Height="460"
    mc:Ignorable="d">
    <Grid Background="FloralWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0"
            Margin="20"
            Source="/Core/Images/1.jpg" />
        <mt:Transitioner Grid.Column="1" SelectedIndex="{Binding SelectedIndex}">
            <!--  登录内容  -->
            <mt:TransitionerSlide>
                <DockPanel Margin="15" VerticalAlignment="Center">
                    <TextBlock
                        Text="欢迎使用"
                        Margin="0,10"
                        DockPanel.Dock="Top"
                        FontWeight="Bold"
                        FontSize="30" />
                    <TextBox
                        Margin="0,10"
                        mt:HintAssist.Hint="请输入账号"
                        DockPanel.Dock="Top" />
                    <PasswordBox
                        Margin="0,10"
                        mt:HintAssist.Hint="请输入密码"
                        extendProperty:PasswordExtend.PasswordEx="{Binding Pwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        DockPanel.Dock="Top" />
                    <Button
                        Content="登录"
                        Command="{Binding LoginCommand}"
                        DockPanel.Dock="Top" />
                    <DockPanel Margin="0,10">
                        <TextBlock Text="注册账号">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding SwitchPageCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                        <TextBlock Text="忘记密码" HorizontalAlignment="Right" />
                    </DockPanel>
                </DockPanel>
            </mt:TransitionerSlide>
            <!--  注册内容  -->
            <mt:TransitionerSlide>
                <DockPanel VerticalAlignment="Center">
                    <TextBlock
                        Text="注册账号"
                        Margin="20,10"
                        FontWeight="Bold"
                        FontSize="30"
                        DockPanel.Dock="Top" />
                    <TextBox
                        Margin="20,10"
                        mt:HintAssist.Hint="请输入姓名"
                        DockPanel.Dock="Top" />
                    <TextBox
                        Margin="20,10"
                        mt:HintAssist.Hint="请输入账号"
                        DockPanel.Dock="Top" />
                    <TextBox
                        Margin="20,10"
                        mt:HintAssist.Hint="请输入密码"
                        DockPanel.Dock="Top" />
                    <TextBox
                        Margin="20,10"
                        mt:HintAssist.Hint="请再次输入密码"
                        DockPanel.Dock="Top" />
                    <Button
                        Content="注册"
                        Margin="20,10"
                        DockPanel.Dock="Top" />
                    <Button
                        Content="返回登录"
                        Command="{Binding SwitchPageCommand}"
                        Margin="20,10"
                        DockPanel.Dock="Top"
                        Background="MediumPurple" />
                </DockPanel>
            </mt:TransitionerSlide>
        </mt:Transitioner>
    </Grid>

</UserControl>
